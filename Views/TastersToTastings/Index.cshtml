@model IEnumerable<LSA.Entities.TasterToTasting>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h1>Assign tasters to tasting</h1>

<p>
    <a class="btn btn-info" asp-action="Create">Assign New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Taster)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasting)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Taster.TasterName)
            </td>
            <td style="display:none">
                @Html.DisplayFor(modelItem => item.Taster.TasterId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tasting.TastingName)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Taster.TasterId, id2 = item.Tasting.TastingId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Taster.TasterId, id2 = item.Tasting.TastingId })
            </td>
        </tr>
}
    </tbody>
</table>
