@model IEnumerable<LSA.Entity.Taster>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TasterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TasterEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TasterSecondName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TasterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TasterEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TasterSecondName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TasterId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TasterId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TasterId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
