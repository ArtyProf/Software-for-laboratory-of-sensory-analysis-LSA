@model IEnumerable<LSA.Entity.TastingHistory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TransactionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hash)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hash)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TastingHistoryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TastingHistoryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TastingHistoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
